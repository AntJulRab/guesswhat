{
  "name" : "Baseline : Seq2Seq",

  "model": {

    "type" : "seq2seq",

    "inputs": {
      "image": true
    },

    "dialogue": {
      "word_embedding_dim": 200,
      "glove" : false,
      "cell": "gru",
      "rnn_units": 1024,
      "bidirectional" : true,
      "layer_norm" : true,
      "max_pool" : false,

      "share_decoder_emb": false
    },

    "image": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false
    },

    "pooling" : {
      "mode": "glimpse",
      "no_attention_mlp": 256,
      "no_glimpses": 1
    },

    "fusion" : {
      "mode": "concat",
      "projection_size": 512
    },

    "decoder" : {
      "rnn_units": 512,
      "layer_norm" : true,
      "cell" : "gru"
    },

    "dropout_keep_prob" : 0.5

  },

  "optimizer": {
    "no_epoch": 20,
    "learning_rate": 3e-4,
    "batch_size": 64,
    "clip_val": 10.0,
    "weight_decay": 0,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer"]
  },

  "status": ["success"],
  "seed": -1
}